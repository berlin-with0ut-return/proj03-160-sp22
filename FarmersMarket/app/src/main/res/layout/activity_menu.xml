<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_default"
        android:text="Kaki Farms"
        android:textColor="@color/gray"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/bellPepperImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/bell_pepper"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="113dp" />

    <TextView
        android:id="@+id/bellPepperTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bell Pepper"
        android:fontFamily="@font/montserrat_default"
        app:layout_constraintStart_toStartOf="@+id/bellPepperImg"
        app:layout_constraintEnd_toEndOf="@+id/bellPepperImg"
        app:layout_constraintTop_toBottomOf="@+id/bellPepperImg"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$1.99"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintStart_toStartOf="@+id/bellPepperTxt"
        app:layout_constraintEnd_toEndOf="@+id/bellPepperTxt"
        app:layout_constraintTop_toBottomOf="@+id/bellPepperTxt"
        android:textColor="@color/gray"
        />


</androidx.constraintlayout.widget.ConstraintLayout>