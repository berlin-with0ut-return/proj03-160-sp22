<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseStand">

    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="North Berkeley Farmer's Market Stands"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        android:fontFamily="@font/montserrat_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.648" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="409dp"
        android:layout_height="587dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/produceTxt"
                android:layout_width="394dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text="Produce"
                android:fontFamily="@font/montserrat_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/kakiImg"
                android:layout_width="86dp"
                android:layout_height="93dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.049"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/produceTxt"
                app:srcCompat="@drawable/kaki_farms" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/black"
                app:layout_constraintEnd_toEndOf="@+id/massaOrganicsTxt"
                app:layout_constraintHorizontal_bias="0.438"
                app:layout_constraintStart_toStartOf="@+id/massaOrganicsTxt"
                app:layout_constraintTop_toBottomOf="@+id/kakiImg" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/black"
                app:layout_constraintEnd_toEndOf="@+id/massaOrganicsTxt"
                app:layout_constraintHorizontal_bias="0.438"
                app:layout_constraintStart_toStartOf="@+id/massaOrganicsTxt"
                app:layout_constraintTop_toBottomOf="@+id/massaImg" />

            <ImageView
                android:id="@+id/massaImg"
                android:layout_width="86dp"
                android:layout_height="93dp"
                android:layout_marginTop="36dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.049"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/kakiImg"
                app:srcCompat="@drawable/massa_organics" />

            <ImageView
                android:id="@+id/oyaImg"
                android:layout_width="86dp"
                android:layout_height="93dp"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.049"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/massaImg"
                app:srcCompat="@drawable/oya_organics" />

            <TextView
                android:id="@+id/meatTxt"
                android:layout_width="394dp"
                android:layout_height="25dp"
                android:layout_marginTop="408dp"
                android:layout_weight="1"
                android:text="Meat"
                android:fontFamily="@font/montserrat_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/produceTxt" />

            <ImageView
                android:id="@+id/frogImg"
                android:layout_width="86dp"
                android:layout_height="93dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.052"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/meatTxt"
                app:srcCompat="@drawable/frog_hollow" />

            <TextView
                android:id="@+id/frogHollowTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"
                android:text="Frog Hollow Farms"
                android:fontFamily="@font/montserrat_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.006"
                app:layout_constraintStart_toEndOf="@+id/frogImg"
                app:layout_constraintTop_toBottomOf="@+id/meatTxt" />

            <TextView
                android:id="@+id/kakiFarmsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="Kaki Farms"
                android:fontFamily="@font/montserrat_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.004"
                app:layout_constraintStart_toEndOf="@+id/kakiImg"
                app:layout_constraintTop_toBottomOf="@+id/produceTxt" />

            <TextView
                android:id="@+id/oyaOrganicsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="112dp"
                android:text="Oya Organics"
                android:fontFamily="@font/montserrat_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.005"
                app:layout_constraintStart_toEndOf="@+id/oyaImg"
                app:layout_constraintTop_toBottomOf="@+id/massaOrganicsTxt" />

            <TextView
                android:id="@+id/massaOrganicsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="108dp"
                android:text="Massa Organics"
                android:fontFamily="@font/montserrat_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.16"
                app:layout_constraintStart_toEndOf="@+id/massaImg"
                app:layout_constraintTop_toBottomOf="@+id/kakiFarmsTxt" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>