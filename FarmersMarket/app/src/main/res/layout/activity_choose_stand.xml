<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseStand">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/montserrat_default"
        android:text="North Berkeley Farmer's Market Stands"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="409dp"
        android:layout_height="587dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/frog_button"
                android:layout_width="371dp"
                android:layout_height="96dp"
                android:layout_marginTop="28dp"
                android:background="@android:color/transparent"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.394"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/meatTxt" />

            <TextView
                android:id="@+id/frogHollowTxt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/montserrat_default"
                android:text="Frog Hollow Farms"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/frogImg"
                app:layout_constraintTop_toBottomOf="@+id/meatTxt" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/black"
                app:layout_constraintEnd_toEndOf="@+id/massaOrganicsTxt"
                app:layout_constraintHorizontal_bias="0.446"
                app:layout_constraintStart_toStartOf="@+id/massaOrganicsTxt"
                app:layout_constraintTop_toBottomOf="@+id/oyaImg" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.446"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/blue_heron" />

            <TextView
                android:id="@+id/produceTxt"
                android:layout_width="394dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_default"
                android:text="Produce"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/kakiImg"
                android:layout_width="86dp"
                android:layout_height="93dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.049"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/produceTxt"
                app:srcCompat="@drawable/kaki_farms" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/black"
                app:layout_constraintEnd_toEndOf="@+id/massaOrganicsTxt"
                app:layout_constraintHorizontal_bias="0.438"
                app:layout_constraintStart_toStartOf="@+id/massaOrganicsTxt"
                app:layout_constraintTop_toBottomOf="@+id/kakiImg" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/black"
                app:layout_constraintEnd_toEndOf="@+id/massaOrganicsTxt"
                app:layout_constraintHorizontal_bias="0.438"
                app:layout_constraintStart_toStartOf="@+id/massaOrganicsTxt"
                app:layout_constraintTop_toBottomOf="@+id/massaImg" />

            <ImageView
                android:id="@+id/massaImg"
                android:layout_width="86dp"
                android:layout_height="93dp"
                android:layout_marginTop="36dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.049"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/kakiImg"
                app:srcCompat="@drawable/massa_organics" />

            <ImageView
                android:id="@+id/oyaImg"
                android:layout_width="86dp"
                android:layout_height="93dp"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.049"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/massaImg"
                app:srcCompat="@drawable/oya_organics" />

            <TextView
                android:id="@+id/meatTxt"
                android:layout_width="394dp"
                android:layout_height="25dp"
                android:layout_marginTop="544dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_default"
                android:text="Meat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/produceTxt" />

            <ImageView
                android:id="@+id/frogImg"
                android:layout_width="86dp"
                android:layout_height="93dp"
                android:layout_marginTop="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.052"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/meatTxt"
                app:srcCompat="@drawable/frog_hollow" />

            <ImageView
                android:id="@+id/blue_heron"
                android:layout_width="86dp"
                android:layout_height="93dp"

                android:layout_marginTop="36dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.049"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/oyaImg"
                app:srcCompat="@drawable/blue_heron" />

            <TextView
                android:id="@+id/kakiFarmsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_default"
                android:text="Kaki Farms"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.004"
                app:layout_constraintStart_toEndOf="@+id/kakiImg"
                app:layout_constraintTop_toBottomOf="@+id/produceTxt" />


            <Button
                android:id="@+id/kaki_button"
                android:layout_width="371dp"
                android:layout_height="96dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.394"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/produceTxt" />

            <Button
                android:id="@+id/massa_button"
                android:layout_width="371dp"
                android:layout_height="96dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.394"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view4" />

            <Button
                android:id="@+id/oya_button"
                android:layout_width="371dp"
                android:layout_height="96dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.394"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <Button
                android:id="@+id/blue_button"
                android:layout_width="371dp"
                android:layout_height="96dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.394"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <TextView
                android:id="@+id/oyaOrganicsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="112dp"
                android:fontFamily="@font/montserrat_default"
                android:text="Oya Organics"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.005"
                app:layout_constraintStart_toEndOf="@+id/oyaImg"
                app:layout_constraintTop_toBottomOf="@+id/massaOrganicsTxt" />

            <TextView
                android:id="@+id/oyaOrganicsTxt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_default"
                android:text="Blue Heron"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.005"
                app:layout_constraintStart_toEndOf="@+id/oyaImg"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <TextView
                android:id="@+id/massaOrganicsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="108dp"
                android:fontFamily="@font/montserrat_default"
                android:text="Massa Organics"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.16"
                app:layout_constraintStart_toEndOf="@+id/massaImg"
                app:layout_constraintTop_toBottomOf="@+id/kakiFarmsTxt" />

            <TextView
                android:id="@+id/kaki_summary"
                android:layout_width="252dp"
                android:layout_height="57dp"
                android:layout_marginTop="8dp"
                android:text="Kaki Farm produces citrus, persimmons, fruits and vegetables like asparagus. Kaki Farm also produces eggs and keeps 400 pastured chickens throughout the farm. They eat grass and are supplemented with fruit and vegetable scraps."
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/kaki_button"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/kakiImg"
                app:layout_constraintTop_toBottomOf="@+id/kakiFarmsTxt" />

            <TextView
                android:id="@+id/massa_summary"
                android:layout_width="252dp"
                android:layout_height="57dp"
                android:layout_marginTop="8dp"
                android:text="Located near Chico in the fertile Sacramento Valley of Northern California, Massa Organics is part farm, part experiment, and all labor of love.

We’re passionate about giving people access to healthy, delicious foods, farmed in a manner that restores the health of our soil, ecosystems, and climate"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/kaki_button"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/kakiImg"
                app:layout_constraintTop_toBottomOf="@+id/massaOrganicsTxt" />

            <TextView
                android:id="@+id/oya_summary"
                android:layout_width="252dp"
                android:layout_height="57dp"
                android:layout_marginTop="8dp"
                android:text="At Oya, we use agroecological farming practices learned and perfected in California and Oaxaca, Mexico along with philosophical influences from Japan. Our diverse background influences not only what we farm, but how we farm."
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/kaki_button"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/kakiImg"
                app:layout_constraintTop_toBottomOf="@+id/oyaOrganicsTxt" />

            <TextView
                android:id="@+id/blue_heron_summary"
                android:layout_width="252dp"
                android:layout_height="73dp"
                android:layout_marginTop="8dp"
                android:text="Blue Heron Farms is located in a sheltered valley blessed with a cool climate and soil that is soft and easy to work with. Both Dennis and Lori agree that their greatest asset is the people who they work with, including a wonderful group of men from Jalisco and Michoacan, Mexico, and a dedicated farmers’ market staff. "
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/kaki_button"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/kakiImg"
                app:layout_constraintTop_toBottomOf="@+id/oyaOrganicsTxt2" />

            <TextView
                android:id="@+id/massa_summary4"
                android:layout_width="251dp"
                android:layout_height="66dp"
                android:layout_marginTop="8dp"
                android:text="Frog Hollow Farm supports the health of life forms both big and small, from our trees and the crew that cares for them down to the billions of microorganisms that reside in our soil. "
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/kaki_button"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/kakiImg"
                app:layout_constraintTop_toBottomOf="@+id/frogHollowTxt2" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>